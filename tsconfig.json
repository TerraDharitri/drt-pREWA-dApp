{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* IMPORTANT: keep global types minimal so we don't pull in duplicate
       Wagmi registrations from dependencies */
    "types": [
      "node",
      "trusted-types"
    ],
    /* Path aliases */
    "baseUrl": ".", // <-- add this
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* Make sure we pick up only our code + our single wagmi registration */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts", // <-- add this to include .d.ts
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts" // <-- where your wagmi.d.ts lives
  ],
  "exclude": [
    "node_modules",
    "contracts",
    "monitoring"
  ]
}
