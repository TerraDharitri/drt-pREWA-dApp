{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      // This allows you to import ABIs from the frontend's directory structure for simplicity
      "@/*": ["../src/*"] 
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}